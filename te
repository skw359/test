import { a, defineData, ClientSchema } from '@aws-amplify/backend';

const schema = a.schema({
  Message: a
    .model({
      owner: a.string(),   
      receiver: a.string(),
      content: a.string(),
      timestamp: a.datetime(),
    })
    .authorization((allow) => [
      allow.owner(),       
    ]),
});

export type Schema = ClientSchema<typeof schema>;

export const data = defineData({
  schema,
  authorizationModes: {
    defaultAuthorizationMode: 'userPool', // use Cognito User Pool for user-based auth
  },
});
