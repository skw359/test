import { useState, useEffect, useRef } from 'react';
import { getCurrentUser } from 'aws-amplify/auth';
import styles from '../../src/styles/_app.module.css';

export default function ProfileButton({ signOut }) {
  const [profileOpen, setProfileOpen] = useState(false);
  const [currentUser, setCurrentUser] = useState('');
  const dropdownRef = useRef(null);

  useEffect(() => {
    const fetchCurrentUser = async () => {
      try {
        const user = await getCurrentUser();
        setCurrentUser(user.username || user.signInDetails?.loginId || '');
      } catch (err) {
        console.error(err);
      }
    };
    fetchCurrentUser();
  }, []);

  // Close dropdown when clicking outside
  useEffect(() => {
    const handleClickOutside = (event) => {
      if (dropdownRef.current && !dropdownRef.current.contains(event.target)) {
        setProfileOpen(false);
      }
    };

    document.addEventListener('mousedown', handleClickOutside);
    return () => document.removeEventListener('mousedown', handleClickOutside);
  }, []);

  // Get initials from username
  const getInitials = (name) => {
    if (!name) return '?';
    return name.split(' ').map(n => n[0]).join('').toUpperCase().slice(0, 2);
  };

  return (
    <div className={styles.dropdownWrapper} ref={dropdownRef}>
      <button
        className={styles.profileButton}
        onClick={() => setProfileOpen(!profileOpen)}
        style={{
          width: '40px',
          height: '40px',
          borderRadius: '50%',
          backgroundColor: '#667eea',
          border: 'none',
          color: 'white',
          fontSize: '14px',
          fontWeight: '600',
          cursor: 'pointer',
          display: 'flex',
          alignItems: 'center',
          justifyContent: 'center',
          transition: 'all 0.2s ease'
        }}
        onMouseEnter={(e) => {
          e.currentTarget.style.backgroundColor = '#5a67d8';
          e.currentTarget.style.transform = 'scale(1.05)';
        }}
        onMouseLeave={(e) => {
          e.currentTarget.style.backgroundColor = '#667eea';
          e.currentTarget.style.transform = 'scale(1)';
        }}
      >
        {getInitials(currentUser)}
      </button>

      {profileOpen && (
        <div 
          className={styles.dropdownMenu}
          style={{
            boxShadow: '0 10px 25px rgba(0, 0, 0, 0.3)',
            overflow: 'hidden'
          }}
        >
          <div className={styles.userInfoSection}>
            <div className={styles.userInfo}>
              <div className={styles.avatar}>
                {getInitials(currentUser)}
              </div>
              <div>
                <div className={styles.username}>
                  {currentUser || 'Loading...'}
                </div>
                <div className={styles.userSubtitle}>
                  Online
                </div>
              </div>
            </div>
          </div>

          <div className={styles.menuOptions}>
            <button
              className={styles.menuButton}
              onClick={() => {
                setProfileOpen(false);
                // Add profile page navigation here if you have one
                // router.push('/profile');
              }}
            >
              ğŸ‘¤ View Profile
            </button>

            <button
              className={styles.menuButton}
              onClick={() => {
                setProfileOpen(false);
                window.location.href = "/settings";
              }}
            >
              âš™ï¸ Settings
            </button>

            <div className={styles.menuDivider} />

            <button
              className={`${styles.menuButton} ${styles.signOutButton}`}
              onClick={() => {
                setProfileOpen(false);
                signOut();
              }}
            >
              ğŸšª Sign Out
            </button>
          </div>
        </div>
      )}
    </div>
  );
}
