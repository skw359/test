import { useAuthenticator } from '@aws-amplify/ui-react';
import React from "react";
import Image from "next/image"; 
import { useState } from "react";
import { useRouter } from 'next/router';

export default function Sidebar() {
    const [activeIcon, setActiveIcon] = useState('home');
    const router = useRouter();
    
    const navItems = [
        { id: 'home', href: "/homepage", icon: '🏠', label: 'Home' },
        { id: 'chat', href: "/chat", icon: '💬', label: 'Chat' },
        { id: 'calendar', href: "/calendar", icon: '📅', label: 'Calendar' },
        { id: 'map', href: "/map", icon: '🗺️', label: 'Map' }
    ];

    const handleIconClick = (id, href) => {
        setActiveIcon(id);
        router.push(href);
    };

    return (
        <>
            {/* Logo section */}
            <div style={{
                position: 'fixed',
                top: '20px',
                left: '20px',
                zIndex: 1000
            }}>
                <Image src="/Logo.png" alt="Velocity Logo" width={100} height={100} />
            </div>
            
            {/* Navigation Sidebar - Now with transparent background */}
            <div style={{
                position: 'fixed',
                left: 0,
                top: 0,
                width: '80px',
                height: '100vh',
                backgroundColor: 'rgba(0, 0, 0, 0.2)', // Semi-transparent overlay
                backdropFilter: 'blur(10px)', // Glass effect
                display: 'flex',
                flexDirection: 'column',
                alignItems: 'center',
                padding: '20px 0',
                borderRight: '1px solid rgba(255, 255, 255, 0.1)',
                zIndex: 999
            }}>
                {/* Menu Icon */}
                <div style={{ 
                    marginBottom: '30px', 
                    cursor: 'pointer',
                    marginTop: '120px' // Space for logo
                }}>
                    <div style={{ width: '24px', height: '2px', backgroundColor: 'rgba(255, 255, 255, 0.6)', marginBottom: '6px' }}></div>
                    <div style={{ width: '24px', height: '2px', backgroundColor: 'rgba(255, 255, 255, 0.6)', marginBottom: '6px' }}></div>
                    <div style={{ width: '24px', height: '2px', backgroundColor: 'rgba(255, 255, 255, 0.6)' }}></div>
                </div>
                
                {/* Navigation Icons */}
                {navItems.map((item) => (
                    <div 
                        key={item.id}
                        onClick={() => handleIconClick(item.id, item.href)}
                        style={{
                            width: '48px',
                            height: '48px',
                            backgroundColor: activeIcon === item.id ? 'rgba(102, 126, 234, 0.8)' : 'rgba(255, 255, 255, 0.1)',
                            borderRadius: '12px',
                            display: 'flex',
                            alignItems: 'center',
                            justifyContent: 'center',
                            marginBottom: '16px',
                            cursor: 'pointer',
                            fontSize: '20px',
                            transition: 'background-color 0.2s ease',
                            border: '1px solid rgba(255, 255, 255, 0.1)'
                        }}
                        onMouseEnter={e => {
                            if (activeIcon !== item.id) {
                                e.currentTarget.style.backgroundColor = 'rgba(255, 255, 255, 0.2)';
                            }
                        }}
                        onMouseLeave={e => {
                            if (activeIcon !== item.id) {
                                e.currentTarget.style.backgroundColor = 'rgba(255, 255, 255, 0.1)';
                            }
                        }}
                        title={item.label}
                    >
                        {item.icon}
                    </div>
                ))}
            </div>
        </>
    );
}

// SignOutButton with updated styling
export const SignOutButton = () => {
    const { signOut } = useAuthenticator();
    return (
        <div style={{ 
            position: 'fixed',
            bottom: '20px',
            left: '20px',
            zIndex: 1000
        }}>
            <button 
                onClick={signOut}
                style={{
                    padding: '8px 16px',
                    backgroundColor: 'rgba(102, 126, 234, 0.8)',
                    color: 'white',
                    border: '1px solid rgba(255, 255, 255, 0.2)',
                    borderRadius: '8px',
                    cursor: 'pointer',
                    fontSize: '14px',
                    backdropFilter: 'blur(10px)',
                    transition: 'all 0.2s ease'
                }}
                onMouseEnter={e => {
                    e.currentTarget.style.backgroundColor = 'rgba(102, 126, 234, 1)';
                }}
                onMouseLeave={e => {
                    e.currentTarget.style.backgroundColor = 'rgba(102, 126, 234, 0.8)';
                }}
            >
                Sign Out
            </button>
        </div>
    );
};
